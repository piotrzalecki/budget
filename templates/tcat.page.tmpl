{{template "admin" .}}

{{define "content"}}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <h2>Transaction categories</h2>
  <br>
  <a class="btn btn-primary" href="/tcats/new" role="button">Create</a>
  <br>
  <div class="table-responsive">
  {{$tcats := index .Data "tcats"}}
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
              {{range $tcats}}
        <tr>

          <td>{{.Id}}</td>
          <td>{{.Name}}</td>
          <td>{{.Description}}</td>
          <td></td>
          <td></td>
        </tr>
        {{end}}
      </tbody>
    </table>
  </div>
</main>



{{end}}

  
