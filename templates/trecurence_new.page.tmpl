{{template "admin" .}}

{{define "content"}}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <h2>Add new category</h2>
  <br>
    <form method="post" action="/dashboard/trecurence/new" novalidate>
    
      <div class="form-group mt-3">
          <label for="name">Name</label>
          <input  class="form-control"  id="name" autocomplete="off"
                name='name' value="" required>
      </div>

      <div class="form-group mt-3" >
          <label for="description">Description</label>
          <input class="form-control" 
                  id="description" autocomplete="off"
                name='description' value="" required>
      </div>

       <div class="form-group mt-3" >
          <label for="add_time">Add Time</label>
          <input class="form-control" 
                  id="add_time" autocomplete="off"
                name='add_time' value="" required>
      </div>
      <hr>
      <input type="submit" class="btn btn-primary" value="Submit">
  </form>
</main>



{{end}}

  
